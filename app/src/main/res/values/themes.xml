<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTZ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#1AD81A</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="burgers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:text">@string/Beef</item>
        <item name="android:layout_margin">10dp</item>

    </style>
    <style name="burgersSold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/Beef</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFB407</item>
        <item name="android:text">@string/price</item>
        <item name="android:layout_margin">8dp</item>

    </style>
    <style name="text">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/Cheddar</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="image">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:src">@drawable/ic_launcher_background</item>
    </style>

    <style name="check">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:text">+</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="check_">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:text">+</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#b4b4b4</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="checkMark">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/check</item>
        <item name="android:layout_margin">8dp</item>

    </style>


</resources>